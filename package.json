{
  "private": true,
  "name": "remix-cloudflare-pages",
  "description": "An opinionated template for running Remix on Cloudflare Pages.",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "build": "yarn build:css && cross-env NODE_ENV=production remix build",
    "build:css": "yarn tailwind --minify",
    "dev": "cross-env NODE_ENV=development run-p dev:*",
    "postinstall": "remix setup cloudflare-pages",
    "dev:remix": "remix watch",
    "dev:wrangler": "wrangler pages dev ./public --watch ./build",
    "dev:css": "yarn tailwind --watch",
    "start": "yarn run dev:wrangler",
    "tailwind": "tailwindcss -i ./styles/tailwind.css -o ./app/tailwind.css"
  },
  "dependencies": {
    "@remix-run/cloudflare-pages": "^1.1.3",
    "@remix-run/react": "^1.1.3",
    "postcss": "^8.4.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.3",
    "tailwindcss": "^3.0.15"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.2.0",
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@remix-run/dev": "^1.1.3",
    "@remix-run/eslint-config": "^1.1.3",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "cross-env": "^7.0.3",
    "esbuild": "0.13.14",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "typescript": "^4.1.2",
    "wrangler": "~0.0.10"
  },
  "engines": {
    "node": ">=16.7"
  },
  "sideEffects": false,
  "main": "dist/worker.js"
}
